<%= render "components/banner" %>
<div class="container d-flex justify-content-between mt-5">
  <h3>My lists</h3>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
</div>
<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
        <div class="col-md-4">
        <%= link_to list_path(list), class: "t-none" do %>
          <div class="card justify-content-center text-center m-3"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <%= list.name %>
          </div>
        <% end %>
        </div>
    <% end %>
  </div>
</div>
